{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      },
      //"Https": {
      //  "Url": "https://0.0.0.0:443"
      //}
    },
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    },
    "Certificates": {
      "Default": {
        //"Path": "/root/.aspnet/https/OcelotGateway.API.pfx"
      },
      "Development": {
          "Password": "f4adf7b6-f9e9-42dd-81d1-b78bb1ba0390"
      }
    }
  },
  "OpenTelemetry": {
    "Tracing": {
      "ServiceName": "ocelot-gateway-api"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Grpc": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Application}] [{Timestamp:HH:mm:ss}] [{Level:u3}] [{Message:lj}] [{SourceContext}] [{Exception}] {NewLine}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "OcelotGateway.API"
    }
  }
}
