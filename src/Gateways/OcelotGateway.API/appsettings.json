{
  "Kestrel": {
    "Certificates": {
      "Default": {
        //"Path": "/root/.aspnet/https/OcelotGateway.API.pfx"
      },
      "Development": {
        "Password": "383bf734-51c5-4440-99d7-2eae3ffbbc21"
      }
    }
  },
  "OpenTelemetry": {
    "Tracing": {
      "ServiceName": "ocelot-gateway-api"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Grpc": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Application}] [{Timestamp:HH:mm:ss}] [{Level:u3}] [{Message:lj}] [{SourceContext}] [{Exception}] {NewLine}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "OcelotGateway.API"
    }
  }
}
