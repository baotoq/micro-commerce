{
  "ConnectionStrings": {
    "DefaultConnection": "Server=postgres;Port=5432;Database=identity;User Id=postgres;Password=P@ssw0rd;"
  },
  "Identity": {
    "Uri": {
      "Internal": "http://identity-api:80",
      "External": "https://localhost:15001"
    },
    "Audience": "identity-api",
    "Scopes": [ "IdentityServerApi" ]
  },
  "OpenTelemetry": {
    "Tracing": {
      "ServiceName": "basket-api"
    }
  },
  "Client": {
    "Swagger": {
      "Uri": [
        "http://local.basket-api.com",
        "http://local.catalog-api.com",
        "http://local.identity-api.com",
        "http://local.ordering-api.com"
      ]
    },
    "React": {
      "Uri": "http://localhost:3000"
    },
    "Angular": {
      "Uri": "http://localhost:4200"
    }
  },
  "DetailedErrors": true,
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Grpc": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Application}] [{Timestamp:HH:mm:ss}] [{Level:u3}] [{Message:lj}] [{SourceContext}] [{Exception}] {NewLine}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "identity-api"
    }
  }
}
