{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:80",
        "Protocols": "Http1AndHttp2"
      },
      "Http2": {
        "Url": "http://0.0.0.0:81",
        "Protocols": "Http2"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=postgres;Port=5432;Database=identity-api;User Id=postgres;Password=P@ssw0rd;"
  },
  "Identity": {
    "Uri": {
      "Internal": "http://identity-api:80",
      "External": "http://localhost:15000"
    },
    "Audience": "identity.api",
    "Scopes": [ "identity.api" ]
  },
  "OpenTelemetry": {
    "Tracing": {
      "Endpoint": "http://zipkin:9411/api/v2/spans"
    }
  },
  "Client": {
    "Swagger": {
      "Uri": [
        "http://localhost:15000",
        "http://localhost:15100",
        "http://localhost:15200",
        "http://localhost:15300"
      ]
    }
  },
  "DetailedErrors": true,
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Grpc": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Application}] [{Timestamp:HH:mm:ss}] [{Level:u3}] [{Message:lj}] [{SourceContext}] [{Exception}] {NewLine}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Identity.API"
    }
  }
}
