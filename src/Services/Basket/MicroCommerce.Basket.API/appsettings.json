{
  "Identity": {
    "Uri": {
      "Internal": "http://identity-api:80",
      "External": "https://localhost:15001"
    },
    "Audience": "basket-api",
    "Scopes": [ "openid", "profile", "basket-api" ]
  },
  "OpenTelemetry": {
    "Tracing": {
      "ServiceName": "basket-api"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Grpc": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Application}] [{Timestamp:HH:mm:ss}] [{Level:u3}] [{Message:lj}] [{SourceContext}] [{Exception}] {NewLine}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "basket-api"
    }
  }
}
