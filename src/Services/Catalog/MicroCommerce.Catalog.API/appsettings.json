{
  "ConnectionStrings": {
    "DefaultConnection": "Server=postgres;Port=5432;Database=catalog;User Id=postgres;Password=P@ssw0rd;"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:80",
        "Protocols": "Http1AndHttp2"
      },
      "Http2": {
        "Url": "http://0.0.0.0:81",
        "Protocols": "Http2"
      }
    }
  },
  "Identity": {
    "Uri": {
      "Internal": "http://identity-api:80",
      "External": "http://localhost:15000"
    },
    "Audience": "catalog.api",
    "Scopes": [ "catalog.api" ]
  },
  "Client": {
    "Ordering": {
      "Uri": {
        "Grpc": "http://ordering-api:81"
      }
    }
  },
  "OpenTelemetry": {
    "Tracing": {
      "ServiceName": "catalog-api"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Grpc": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Application}] [{Timestamp:HH:mm:ss}] [{Level:u3}] [{Message:lj}] [{SourceContext}] [{Exception}] {NewLine}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Catalog.API"
    }
  }
}
